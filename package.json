{
  "name": "react-webpack-boilerplate",
  "version": "2.1.0",
  "description": "Minimalistic ES6 React boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "webpack-dev-server",
    "clean": "rimraf dist",
    "production": "cross-env npm run clean && webpack --config webpack.production.config.js --progress --profile --colors",
    "lint": "eslint ./app/**/**.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "precommit": "cross-env npm run lint",
    "prepush": "cross-env npm run lint"
  },
  "author": "Allen Royston",
  "license": "MIT",
  "jest": {
    "setupFiles": [
      "<rootDir>/config/jest/shim.js"
    ],
    "collectCoverageFrom": [
      "app/**/*.{js,jsx,ts,tsx}"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/config/jest/assetsTransformer.js"
    },
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ],
    "transform": {
      "\\.js$": "babel-jest"
    }
  },
  "dependencies": {
    "browser-sync": "^2.24.4",
    "compression": "^1.7.2",
    "copy-webpack-plugin": "4.5.1",
    "cross-env": "5.1.4",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "3.0.2",
    "fs": "0.0.1-security",
    "gulp": "^3.9.1",
    "gulp-inject-string": "^1.1.1",
    "gulp-sequence": "^1.0.0",
    "gulp-shell": "^0.6.5",
    "gulp-watch": "^5.0.0",
    "gulp-watch-sequence": "^1.0.0",
    "html-webpack-plugin": "3.2.0",
    "nodemon": "^1.17.3",
    "pixi.js": "^4.7.3",
    "prop-types": "^15.6.1",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "react-hot-loader": "4.1.1",
    "react-pixi": "^0.9.16",
    "react-pixi-fiber": "^0.4.4",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "4.2.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "request": "^2.85.0",
    "webpack": "3.11.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.1",
    "babel-loader": "7.1.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-react-pug": "^6.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-react-boilerplate": "1.1.1",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-2": "6.24.1",
    "css-hot-loader": "1.3.9",
    "css-loader": "^0.28.11",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.19.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-loader": "2.0.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.6.0",
    "file-loader": "1.1.10",
    "jest": "22.1.0",
    "node-sass": "4.9.0",
    "open-browser-webpack-plugin": "0.0.5",
    "react-addons-test-utils": "15.6.2",
    "react-test-renderer": "16.3.2",
    "rimraf": "2.6.2",
    "sass-loader": "6.0.7",
    "style-loader": "0.21.0",
    "url-loader": "1.0.0",
    "webpack-dev-server": "2.9.6"
  }
}
